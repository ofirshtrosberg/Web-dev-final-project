<header>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lora">
    <div id="header_top_div">
        <label>Free Shipping</label>
    </div>
    <!-- nav bar -->
    <nav id="header_navbar" class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a id="shop_name" class="navbar-brand" href="/">Chic Et Unique</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item dropdown d-lg-none">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Menu
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <% for (let index=0; index < AllCategories.length; index++) { const
                                categoryName=AllCategories[index];%>
                                <li><a class="dropdown-item" href="/products/category/<%=categoryName.id%>">
                                        <%=categoryName.id%>
                                    </a></li>
                                <%} %>
                                <li><a class="dropdown-item" href="/products">
                                    All
                                </a></li>
                        </ul>
                    </li>
                    <li class="nav-item d-lg-none">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                </ul>
                <hr class="d-lg-none">
                <ul class="navbar-nav">
                    <li class="nav-item col">
                        <% if(locals.user) { %>
                            <div class="btn-group">
                                <a href="#" class="nav_right_items nav-link" role="button" id="dropdownMenuLink"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i>
                                    <label class="d-lg-none">Private Area</label>
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <li><a class="dropdown-item dropdown_name" href="#">
                                            <%= username %>
                                        </a></li>
                                    <% if(isAdmin) { %>
                                        <li><a class="dropdown-item bold_item" href="http://localhost:8088/adminPanel">ADMIN PANEL</a></li> 
                                    <% } else { %>
                                        <li><a class="dropdown-item bold_item" href="http://localhost:8088/accounts/account">SEE MY ACCOUNT</a></li>
                                        <li><a class="dropdown-item" href="http://localhost:8088/orders/getOrdersPage">My orders</a></li>
                                    <% } %>
                                    <div class="dropdown-divider"></div>
                                    <li><a class="dropdown-item" href="http://localhost:8088/users/logout">Log out</a>
                                    </li>
                                </ul>
                            </div>
                            <% } else { %>
                                <a href="#" id="signinButton"
                                    class="nav_right_items nav-link btn btn-secondary btn-lg signin_button"
                                    type="button" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                                    Sign in
                                </a>
                                <% } %>
                    </li>
                    <% if(!isAdmin) { %>
                    <li class="nav-item col">
                        <a id="wishList_link" href="/wishList" class="nav_right_items nav-link">
                            <i class="bi bi-suit-heart-fill"></i>
                            <label class="d-lg-none">Wish List</label>
                        </a>
                    </li>
                    <li class="nav-item col">
                        <a id="shppingBag_link" href="/shoppingBag" class="nav_right_items nav-link">
                            <i class="bi bi-bag-fill"></i>
                            <label class="d-lg-none">Shopping Bag</label>
                        </a>
                    </li>
                    <%}%>
                    <% if(isAdmin) { %>
                        <b><label id="adminModeLabel" class="">Admin Mode</label></b>
                    <%}%>
                    <li id="search_bar_nav_item" class="nav-item col d-none">
                        <div id="search_bar">
                            <input id="search_input" type="text" placeholder="Search" name="search_input">
                            <i id="search_icon" class="bi bi-search text-dark"></i>
                        </div>
                    </li>
                    <li class="nav-item col">
                        <button id="menu_button">
                            <i class="bi bi-list"></i>
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-6">
                                <img src="/images/login_image.jpeg" class="img-fluid">
                            </div>
                            <div class="col-6 login">
                                <div class="modal-header border-0">
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body login_container container">
                                    <center>
                                        <h5 class="login_title" id="staticBackdropLabel">Log in</h5>
                                        <form action="users/login" method="post">
                                            <div class="form-group">
                                                <div class="bold_item row">
                                                    <p id="login_errors"></p>
                                                </div>
                                                <label class="control-label"></label>
                                                <input type="text" id="username_txt" name="username"
                                                    class="form-control row site_input" placeholder="Username">
                                                <label class="control-label"></label>
                                                <input type="password" id="pass_txt" name="password"
                                                    class="form-control row site_input" placeholder="Password">
                                            </div>
                                            <div class="row">
                                                <button id="login_button" type="submit"
                                                    class="btn btn-dark btn-md btn-block">Connect</button>
                                            </div>
                                        </form>
                                    </center>
                                    <div class="modal-footer login_footer"><strong>Not a member yet? <button
                                                id="switchToReg"><b>Register</b></button></strong>
                                    </div>
                                </div>
                                <div class="modal-body register_container container">
                                    <center>
                                        <h5 class="login_title" id="staticBackdropLabel">Register to start buying</h5>
                                        <div class="row">
                                            <p class="register_intro">Buy, save favourite items, track price drops &
                                                make offers!</p>
                                        </div>
                                        <form action="users" method="post">
                                            <div class="form-group">
                                                <div class="bold_item row">
                                                    <p id="register_errors"></p>
                                                </div>
                                                <label class="control-label"></label>
                                                <input type="text" id="username_txt_reg" name="username"
                                                    class="form-control row site_input" data-bs-toggle="tooltip"
                                                    data-bs-placement="bottom"
                                                    title="Username must be at least 5 characters"
                                                    placeholder="Username">
                                                <label class="control-label"></label>
                                                <input type="password" id="pass_txt_reg" name="password"
                                                    class="form-control row site_input" data-bs-toggle="tooltip"
                                                    data-bs-placement="bottom"
                                                    title="Password must be at least 5 characters"
                                                    placeholder="Password">
                                            </div>
                                    </center>
                                    <div class="form-check agreement_check" data-bs-toggle="tooltip"
                                        data-bs-placement="bottom" title="Please check in order to register">
                                        <input class="form-check-input" type="checkbox" value="" id="accept_terms_check"
                                            onchange="enableDisableRegButton()">
                                        <label class="form-check-label">
                                            <p class="register_intro">By signing up, I accept Chic et Unique's <br>
                                                Terms and Conditions and Privacy Policy
                                            </p>
                                        </label>
                                    </div>
                                    <div class="row">
                                        <button id="register_button" type="submit" class="btn btn-dark btn-md btn-block"
                                            disabled="disabled">Join the community</button>
                                    </div>
                                    </form>
                                    <div class="modal-footer login_footer"><strong>Already have an account? <button
                                                id="switchToLogin"><b>Log in</b></button></strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid d-none" id="menu_div">
        <div class="row">
            <div class="col-3" id="menu_cols">
                <ul id="menu_ul">
                    <% for (let index=0; index < AllCategories.length; index++) { const
                        categoryName=AllCategories[index];%>
                        <li class="header_menu_li mb-2 mt-3" id="<%=categoryName.id %>">
                            <a href="/products/category/<%=categoryName.id%>">
                                <%=categoryName.id%>
                            </a>
                        </li>
                        <%} %>
                        <li class="header_menu_li gray mb-2 mt-3"><a href="/products">All</a></li>
                </ul>
            </div>
            <div class="col-1 menu_img_div">
                <img class="menu_img" src="/images/menuImg1.jpg">
            </div>
            <div class="col-1 menu_img_div">
                <img class="menu_img" src="/images/menuImg2.jpg">
            </div>
            <div class="col-1 menu_img_div">
                <img class="menu_img" src="/images/menuImg3.jpg">
            </div>
        </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>

</header>